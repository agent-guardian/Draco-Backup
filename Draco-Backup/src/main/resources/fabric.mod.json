{
  "schemaVersion": 1,
  "id": "draco-backup",
  "version": "${version}",

  "name": "Draco Backup",
  "description": "A simple server wrapper to use rsync to backup server files and the world save.",
  "authors": [
    "Firnen"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "CC BY-SA 4.0",
  "icon": "assets/dracoBackup/icon.png",

  "environment": "server",
  "entrypoints": {
    "server": [
      "firnen.dracoBackup.Main"
    ]
  },

  "depends": {
    "fabricloader": ">=0.7.2",
    "fabric": "*",
    "minecraft": "1.15.x"
  },
  "suggests": {
    "flamingo": "*"
  }
}
